# Server Configuration
NODE_ENV=development
PORT=3002

# Database
MONGODB_URI=mongodb://admin:password123@localhost:27017/tasktrackr?authSource=admin

# JWT Secret (for token verification)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-with-256-bit-key

# CORS (comma-separated origins for production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# File Storage - Cloudinary (optional, will use local storage if not set)
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-key
CLOUDINARY_API_SECRET=your-cloudinary-secret

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=5

# Service URLs (for inter-service communication)
AUTH_SERVICE_URL=http://localhost:3001
NOTIFICATION_SERVICE_URL=http://localhost:3003

# Local Storage Path
UPLOAD_DIR=./uploads

# Rate Limiting
MAX_REQUESTS_PER_WINDOW=200
WINDOW_MS=900000

# Logging
LOG_LEVEL=info