# Server Configuration
NODE_ENV=development
PORT=3001

# Database
MONGODB_URI=mongodb://admin:password123@localhost:27017/tasktrackr?authSource=admin

# JWT Secrets (use strong random strings in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-with-256-bit-key
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-with-256-bit-key

# CORS (comma-separated origins for production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Redis (for rate limiting and session management)
REDIS_URL=redis://localhost:6379

# Email Service (for password reset emails)
EMAIL_SERVICE_URL=http://localhost:3003

# Service URLs (for inter-service communication)
TASK_SERVICE_URL=http://localhost:3002
NOTIFICATION_SERVICE_URL=http://localhost:3003

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
MAX_REQUESTS_PER_WINDOW=100
WINDOW_MS=900000

# Logging
LOG_LEVEL=info